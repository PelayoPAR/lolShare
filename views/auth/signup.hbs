<form action="/auth/signup" method="POST">
   <label for="username"> Username
      <input type="text" id="username" name="username" placeholder="Your username" value="{{username}}">
   </label>
   <br />
   <label for="email"> Email
      <input type="text" id="email" name="email" placeholder="Your email" value="{{email}}">
   </label>
   <br />
   <label for="password"> Password
      <input type="password" id="password" name="password" placeholder="Your password">
   </label>
   <br />
   <label for="confirmPassword">Confirm Password
    <input
      type='password'
      id="confirmPassword"
      name='confirmPassword'
      placeholder='Repeat password'
    />
  </label>
  <br />

   <button type="submit">Create User</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}

{{#if user}}
   <h4>Thank you for signing up <a href="/user/{{user._id}}">{{user.username}}</a></h4>
{{/if}}