<form action="/auth/login" method="POST">
   <label> Username
      <input type="text" name="username" placeholder="Your username" value="{{username}}">
   </label>
   <label> Password
      <input type="password" name="password" placeholder="Your password">
   </label>

   <button type="submit">Submit</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}